<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".ui.audio_mode.AudioModeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp">


            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/back"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="What is your device audio mode?"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Cameras with Audio either have a built-in microphone on the camera or an audio input connector to connect an add-on microphone"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            style="@style/CustomRadioButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/radio_btn_back"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="10dp"
            android:paddingTop="4dp"
            android:text="1 way (single)"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Built-in high-fidelity speaker and microphone pickup, support two way voice intercom"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

        <RadioButton
            style="@style/CustomRadioButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radio_btn_back"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="10dp"
            android:paddingTop="4dp"
            android:text="Motion detection on"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Listen to device surrounding through grant Microphone permission fell like you are right"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

    </RadioGroup>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/main_color"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/continue_word"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>